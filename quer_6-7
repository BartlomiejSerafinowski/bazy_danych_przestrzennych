-- Zad1
CREATE TABLE serafinowski.intersects AS
SELECT a.rast, b.municipality
FROM rasters.dem AS a, vectors.porto_parishes AS b
WHERE ST_Intersects(a.rast, b.geom) AND b.municipality ilike 'porto';

alter table serafinowski.intersects
add column rid SERIAL PRIMARY KEY;

CREATE INDEX idx_intersects_rast_gist ON serafinowski.intersects
USING gist (ST_ConvexHull(rast));

SELECT AddRasterConstraints('serafinowski'::name,
'intersects'::name,'rast'::name);

-- Zad2
CREATE TABLE serafinowski.clip AS
SELECT ST_Clip(a.rast, b.geom, true), b.municipality
FROM rasters.dem AS a, vectors.porto_parishes AS b
WHERE ST_Intersects(a.rast, b.geom) AND b.municipality like 'PORTO';

-- Zad3
CREATE TABLE serafinowski.union AS
SELECT ST_Union(ST_Clip(a.rast, b.geom, true))
FROM rasters.dem AS a, vectors.porto_parishes AS b 
WHERE b.municipality ilike 'porto' and ST_Intersects(b.geom,a.rast);

SELECT st_union FROM serafinowski.union;

-- Zad4
CREATE TABLE serafinowski.porto_parishes AS
WITH r AS (
SELECT rast FROM rasters.dem
LIMIT 1
)
SELECT ST_AsRaster(a.geom,r.rast,'8BUI',a.id,-32767) AS rast
FROM vectors.porto_parishes AS a, r
WHERE a.municipality ilike 'porto';

SELECT rast FROM serafinowski.porto_parishes;

-- Zad5
DROP TABLE serafinowski.porto_parishes; --> drop table porto_parishes first
CREATE TABLE serafinowski.porto_parishes AS
WITH r AS (
SELECT rast FROM rasters.dem
LIMIT 1
)
SELECT st_union(ST_AsRaster(a.geom,r.rast,'8BUI',a.id,-32767)) AS rast
FROM vectors.porto_parishes AS a, r
WHERE a.municipality ilike 'porto';

SELECT rast FROM serafinowski.porto_parishes;

-- Zad6
DROP TABLE serafinowski.porto_parishes; --> drop table porto_parishes first
CREATE TABLE serafinowski.porto_parishes AS
WITH r AS (
SELECT rast FROM rasters.dem
LIMIT 1 )
SELECT st_tile(st_union(ST_AsRaster(a.geom,r.rast,'8BUI',a.id,-
32767)),128,128,true,-32767) AS rast
FROM vectors.porto_parishes AS a, r
WHERE a.municipality ilike 'porto';

SELECT rast FROM serafinowski.porto_parishes;

-- Zad7
create table serafinowski.intersection as
SELECT
a.rid,(ST_Intersection(b.geom,a.rast)).geom,(ST_Intersection(b.geom,a.rast)
).val
FROM rasters.landsat8 AS a, vectors.porto_parishes AS b
WHERE b.parish ilike 'paranhos' and ST_Intersects(b.geom,a.rast);

SELECT * FROM serafinowski.intersection;

-- Zad8
CREATE TABLE serafinowski.dumppolygons AS
SELECT
a.rid,(ST_DumpAsPolygons(ST_Clip(a.rast,b.geom))).geom,(ST_DumpAsPolygons(ST_Clip(a.rast,b.geom))).val
FROM rasters.landsat8 AS a, vectors.porto_parishes AS b
WHERE b.parish ilike 'paranhos' and ST_Intersects(b.geom,a.rast);

SELECT * FROM serafinowski.dumppolygons;

-- Zad9
CREATE TABLE serafinowski.landsat_nir AS
SELECT rid, ST_Band(rast,4) AS rast
FROM rasters.landsat8;

SELECT * FROM serafinowski.landsat_nir;

-- Zad10
CREATE TABLE serafinowski.paranhos_dem AS
SELECT a.rid,ST_Clip(a.rast, b.geom,true) as rast
FROM rasters.dem AS a, vectors.porto_parishes AS b
WHERE b.parish ilike 'paranhos' and ST_Intersects(b.geom,a.rast);

SELECT * FROM serafinowski.paranhos_dem;

-- Zad11
CREATE TABLE serafinowski.paranhos_slope AS
SELECT a.rid,ST_Slope(a.rast,1,'32BF','PERCENTAGE') as rast
FROM serafinowski.paranhos_dem AS a;

SELECT * FROM serafinowski.paranhos_slope;

-- Zad12
CREATE TABLE serafinowski.paranhos_slope_reclass AS
SELECT a.rid,ST_Reclass(a.rast,1,']0-15]:1, (15-30]:2, (30-9999:3',
'32BF',0)
FROM serafinowski.paranhos_slope AS a;

SELECT * FROM serafinowski.paranhos_slope_reclass;

-- Zad13
SELECT st_summarystats(a.rast) AS stats
FROM serafinowski.paranhos_dem AS a;

-- Zad14
SELECT st_summarystats(ST_Union(a.rast))
FROM serafinowski.paranhos_dem AS a;

-- Zad15
WITH t AS (
SELECT st_summarystats(ST_Union(a.rast)) AS stats
FROM serafinowski.paranhos_dem AS a
)
SELECT (stats).min,(stats).max,(stats).mean FROM t;

-- Zad16
WITH t AS (
SELECT b.parish AS parish, st_summarystats(ST_Union(ST_Clip(a.rast,
b.geom,true))) AS stats
FROM rasters.dem AS a, vectors.porto_parishes AS b
WHERE b.municipality ilike 'porto' and ST_Intersects(b.geom,a.rast)
group by b.parish
)
SELECT parish,(stats).min,(stats).max,(stats).mean FROM t;

-- Zad17
SELECT b.name,st_value(a.rast,(ST_Dump(b.geom)).geom)
FROM
rasters.dem a, vectors.places AS b
WHERE ST_Intersects(a.rast,b.geom)
ORDER BY b.name;

-- Zad18 40.96 sec
create table serafinowski.tpi30 as
select ST_TPI(a.rast,1) as rast
from rasters.dem a;

CREATE INDEX idx_tpi30_rast_gist ON serafinowski.tpi30
USING gist (ST_ConvexHull(rast));

SELECT AddRasterConstraints('serafinowski'::name,
'tpi30'::name,'rast'::name);

SELECT * FROM serafinowski.tpi30;

DROP TABLE serafinowski.tpi30;

-- Zad19 1.529 sec
create table serafinowski.tpi30_porto as
SELECT ST_TPI(a.rast,1) as rast
FROM rasters.dem AS a, vectors.porto_parishes AS b
WHERE ST_Intersects(a.rast, b.geom) AND b.municipality ilike 'porto';

CREATE INDEX idx_tpi30_porto_rast_gist ON serafinowski.tpi30_porto
USING gist (ST_ConvexHull(rast));

SELECT AddRasterConstraints('serafinowski'::name,
'tpi30_porto'::name,'rast'::name);

DROP TABLE serafinowski.tpi30_porto;

-- Zad20
CREATE TABLE serafinowski.porto_ndvi AS
WITH r AS (
SELECT a.rid,ST_Clip(a.rast, b.geom,true) AS rast
FROM rasters.landsat8 AS a, vectors.porto_parishes AS b
WHERE b.municipality ilike 'porto' and ST_Intersects(b.geom,a.rast)
)
SELECT
r.rid,ST_MapAlgebra(
r.rast, 1,
r.rast, 4,
'([rast2.val] - [rast1.val]) / ([rast2.val] +
[rast1.val])::float','32BF'
) AS rast
FROM r;

SELECT * FROM serafinowski.porto_ndvi;

CREATE INDEX idx_porto_ndvi_rast_gist ON serafinowski.porto_ndvi
USING gist (ST_ConvexHull(rast));

SELECT AddRasterConstraints('serafinowski'::name,
'porto_ndvi'::name,'rast'::name);

-- Zad21
create or replace function serafinowski.ndvi(
value double precision [] [] [],
pos integer [][],
VARIADIC userargs text []
)
RETURNS double precision AS
$$
BEGIN
--RAISE NOTICE 'Pixel Value: %', value [1][1][1];-->For debug purposes
RETURN (value [2][1][1] - value [1][1][1])/(value [2][1][1]+value
[1][1][1]); --> NDVI calculation!
END;
$$
LANGUAGE 'plpgsql' IMMUTABLE COST 1000;

CREATE TABLE serafinowski.porto_ndvi2 AS
WITH r AS (
SELECT a.rid,ST_Clip(a.rast, b.geom,true) AS rast
FROM rasters.landsat8 AS a, vectors.porto_parishes AS b
WHERE b.municipality ilike 'porto' and ST_Intersects(b.geom,a.rast)
)
SELECT
r.rid,ST_MapAlgebra(
r.rast, ARRAY[1,4],
'serafinowski.ndvi(double precision[],
integer[],text[])'::regprocedure, --> This is the function!
'32BF'::text
) AS rast
FROM r;

CREATE INDEX idx_porto_ndvi2_rast_gist ON serafinowski.porto_ndvi2
USING gist (ST_ConvexHull(rast));

SELECT AddRasterConstraints('serafinowski'::name,
'porto_ndvi2'::name,'rast'::name);

-- Zad22
SELECT ST_AsTiff(ST_Union(rast))
FROM serafinowski.porto_ndvi;

SELECT ST_GDALDrivers();

-- Zad23
CREATE TABLE tmp_out AS
SELECT lo_from_bytea(0,
 ST_AsGDALRaster(ST_Union(rast), 'GTiff', ARRAY['COMPRESS=DEFLATE',
'PREDICTOR=2', 'PZLEVEL=9'])
 ) AS loid
FROM serafinowski.porto_ndvi;
----------------------------------------------
SELECT lo_export(loid, 'G:\myraster.tiff') --> Save the file in a place
where the user postgres have access. In windows a flash drive usualy works
fine.
 FROM tmp_out;
----------------------------------------------
SELECT lo_unlink(loid)
 FROM tmp_out; --> Delete the large object.

